<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CodeCoverageDashboard.Pages.MethodPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:CodeCoverageDashboard.Models"
    xmlns:viewmodels="clr-namespace:CodeCoverageDashboard.ViewModels"
    Title="{Binding Title}"
    x:DataType="viewmodels:MethodPageViewModel">
    <Grid ColumnDefinitions="*, 400" RowDefinitions="170, *">
        <!--  Top left box  -->
        <Label
            Grid.Row="0"
            Grid.Column="0"
            BackgroundColor="Red" />
        <!--  Top right box  -->
        <Label
            Grid.Row="1"
            Grid.Column="0"
            BackgroundColor="Aqua" />

        <!--  Bottom right box  -->
        <Label
            Grid.Row="1"
            Grid.Column="1"
            BackgroundColor="Green" />

        <!--  Bottom left box  -->
        <Label
            Grid.Row="0"
            Grid.Column="1"
            BackgroundColor="Yellow" />
        <CollectionView
            Grid.Row="1"
            Grid.Column="0"
            ItemsSource="{Binding SelectedMethod.ListLines}">
            <CollectionView.EmptyView>
                <Label
                    Margin="20"
                    FontSize="50"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="No Lines available" />
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:LineData">
                    <Border
                        BackgroundColor="Yellow"
                        HeightRequest="30"
                        StrokeThickness="5"
                        WidthRequest="400">
                        <HorizontalStackLayout>
                            <Label Padding="0,0,50,0" Text="{Binding LineNumber, StringFormat='Line Number: {0}'}" />
                            <Label Text="{Binding Hits, StringFormat='Number of hits: {0}'}" />
                        </HorizontalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>