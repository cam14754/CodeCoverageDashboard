<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CodeCoverageDashboard.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:CodeCoverageDashboard.Models"
    xmlns:viewmodels="clr-namespace:CodeCoverageDashboard.ViewModels"
    x:DataType="viewmodels:MainPageViewModel">

    <Grid ColumnDefinitions="*, 400" RowDefinitions="170, *">
        <!--  Top left box  -->
        <Label
            Grid.Row="0"
            Grid.Column="0"
            BackgroundColor="Red" />
        <HorizontalStackLayout Grid.Row="0" Grid.Column="0">
            <Button
                Margin="20"
                Command="{Binding LoadReposCommand}"
                HeightRequest="100"
                Text="Load Repositories"
                WidthRequest="200" />
            <Button
                Margin="20"
                Command="{Binding RefreshCommand}"
                HeightRequest="100"
                Text="Test Repositories"
                WidthRequest="200" />
        </HorizontalStackLayout>



        <!--  Bottom left box  -->
        <Label
            Grid.Row="1"
            Grid.Column="0"
            BackgroundColor="Aqua" />
        <CollectionView
            x:Name="SelectedRepo"
            Grid.Row="1"
            Grid.Column="0"
            ItemsSource="{Binding Classes}">
            <CollectionView.EmptyView>
                <Label
                    Margin="20"
                    FontSize="50"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="No Repositories availible, press 'Load Repositories' to load repositories" />
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:ClassData">
                    <Border
                        BackgroundColor="Yellow"
                        HeightRequest="200"
                        StrokeThickness="5"
                        WidthRequest="400">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainPageViewModel}}, x:DataType=viewmodels:MainPageViewModel, Path=GoToRepoPageCommand}"
                                CommandParameter="{Binding .}"
                                NumberOfTapsRequired="2" />
                        </Border.GestureRecognizers>
                        <VerticalStackLayout>
                            <Label Text="{Binding Name, StringFormat='Name: {0}'}" />
                            <Label Text="{Binding Filename, StringFormat='Filename: {0}'}" />


                            <Label Text="Errors:" />

                            <!--  Inner list of strings  -->
                            <ScrollView>
                                <CollectionView ItemsSource="{Binding Errors}">
                                    <CollectionView.EmptyView>
                                        <Label Text="No Errors :)" />
                                    </CollectionView.EmptyView>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="x:String">
                                            <Label Text="{Binding ., StringFormat=' -{0}'}" />
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </ScrollView>

                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>



        <!--  Bottom right box  -->
        <Label
            Grid.Row="1"
            Grid.Column="1"
            BackgroundColor="Green" />

        <!--  - Top right box  -->
        <Label
            Grid.Row="0"
            Grid.Column="1"
            BackgroundColor="Yellow" />
        <Grid
            Grid.Row="0"
            Grid.Column="1"
            ColumnDefinitions="30, *"
            RowDefinitions="60, auto, auto">
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                BackgroundColor="White"
                FontSize="30"
                HeightRequest="50"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="Dashboard Settings:"
                VerticalTextAlignment="Center"
                WidthRequest="300" />

            <CheckBox
                Grid.Row="1"
                Grid.Column="0"
                HeightRequest="30"
                IsChecked="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainPageViewModel}}, x:DataType=viewmodels:MainPageViewModel, Path=DeleteExistingReports}"
                WidthRequest="30" />
            <Label
                Grid.Row="1"
                Grid.Column="1"
                BackgroundColor="White"
                FontSize="20"
                HeightRequest="30"
                HorizontalOptions="Start"
                HorizontalTextAlignment="Center"
                Text="Delete old reports before analysis"
                VerticalTextAlignment="Center" />

        </Grid>
    </Grid>

</ContentPage>
