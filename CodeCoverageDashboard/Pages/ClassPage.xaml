<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CodeCoverageDashboard.Pages.ClassPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:CodeCoverageDashboard.Models"
    xmlns:viewmodels="clr-namespace:CodeCoverageDashboard.ViewModels"
    Title="{Binding Title}"
    x:DataType="viewmodels:ClassPageViewModel">
    <Grid ColumnDefinitions="*, 400" RowDefinitions="170, *">
        <!--  Top left box  -->
        <Label
            Grid.Row="0"
            Grid.Column="0"
            BackgroundColor="Red" />
        <!--  Top right box  -->
        <Label
            Grid.Row="1"
            Grid.Column="0"
            BackgroundColor="Aqua" />

        <!--  Bottom right box  -->
        <Label
            Grid.Row="1"
            Grid.Column="1"
            BackgroundColor="Green" />

        <!--  Bottom left box  -->
        <Label
            Grid.Row="0"
            Grid.Column="1"
            BackgroundColor="Yellow" />
        <CollectionView
            Grid.Row="1"
            Grid.Column="0"
            ItemsSource="{Binding SelectedClass.ListMethods}">
            <CollectionView.EmptyView>
                <Label
                    Margin="20"
                    FontSize="50"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="No Methods available" />
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:MethodData">
                    <Border
                        BackgroundColor="Yellow"
                        HeightRequest="120"
                        StrokeThickness="5"
                        WidthRequest="400">

                        <VerticalStackLayout>
                            <Label Text="{Binding Name, StringFormat='Name: {0}'}" />
                            <Label Text="{Binding CoveragePercent, StringFormat='Coverage Percent: {0:P2}'}" />
                            <Label Text="Errors:" />

                            <!--  Inner list of strings  -->
                            <ScrollView>
                                <CollectionView ItemsSource="{Binding Errors}">
                                    <CollectionView.EmptyView>
                                        <Label Text="No Errors :)" />
                                    </CollectionView.EmptyView>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="x:String">
                                            <Label Text="{Binding ., StringFormat=' -{0}'}" />
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </ScrollView>

                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>